<Window x:Class="Syntha.Iota.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Synthea Importer for IOTA" WindowState="Maximized">
  <Grid>
    <DockPanel>
      <Menu DockPanel.Dock="Top" Name="MainMenu">
        <MenuItem Header="_File">
          <MenuItem Header="_Generate Patients" Click="GeneratePatients_OnClick" />
          <MenuItem Header="_Patient Overview" Click="PatientOverview_OnClick" />
          <MenuItem Header="_Patient Import" Click="PatientImport_OnClick" />
          <Separator />
          <MenuItem Header="_Exit" Click="Exit_OnClick" />
        </MenuItem>
      </Menu>
      <TextBox AcceptsReturn="True" />
    </DockPanel>
    <ContentControl x:Name="ContentControl" />
  </Grid>
</Window>
